<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2F7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#5E35B1"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Dashboard"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textColor="#D1C4E9"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Health Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeColor="#D1C4E9"
            app:strokeWidth="1dp"
            android:backgroundTint="#EDE7F6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Health Stats"
                    android:textColor="#311B92"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Curved BMI Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        android:backgroundTint="#D1C4E9"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvBmiValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="22.4"
                                android:textColor="#5E35B1"
                                android:textSize="26sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BMI"
                                android:textColor="#666666"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Curved Status Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        android:backgroundTint="#D1C4E9"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvBmiStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Normal"
                                android:textColor="#5E35B1"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textColor="#666666"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textColor="#5E35B1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMealPlans"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cornerRadius="16dp"
                android:text="Meal Plans"
                android:textColor="#FFFFFF"
                app:backgroundTint="#7E57C2"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExercisePlans"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:cornerRadius="16dp"
                android:text="Exercise"
                android:textColor="#FFFFFF"
                app:backgroundTint="#7E57C2"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />
        </LinearLayout>

        <!-- Health Tools -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Tools"
            android:textColor="#5E35B1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmergency"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cornerRadius="16dp"
                app:backgroundTint="#E53935"
                android:text="ðŸ†˜ SOS"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWaterTracker"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cornerRadius="16dp"
                app:backgroundTint="#00897B"
                android:text="ðŸš¶ Steps"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHealthTips"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cornerRadius="16dp"
                app:backgroundTint="#673AB7"
            android:text="ðŸ’¡ Tips"
                android:textStyle="bold"
            android:textColor="#FFFFFF"

            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReports"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cornerRadius="16dp"
                app:backgroundTint="#1976D2"
            android:text="ðŸ©º Doctor"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAmbientLight"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cornerRadius="16dp"
                app:backgroundTint="#4A90E2"
            android:text="ðŸŒžLumens"
                android:textStyle="bold"
            android:textColor="#FFFFFF" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnThermo"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                app:cornerRadius="16dp"
                app:backgroundTint="#2037e3"
                android:text="ðŸ’§H2O"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </GridLayout>
    </LinearLayout>
</ScrollView>
