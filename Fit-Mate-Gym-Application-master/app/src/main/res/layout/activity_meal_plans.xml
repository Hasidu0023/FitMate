<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F7"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:color/transparent"
        android:showDividers="middle"
        android:dividerPadding="16dp">

        <!-- User Name Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvUserEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading name..."
                    android:textSize="18sp"
                    android:textColor="#222222"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Gender Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvGenderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="18sp"
                    android:textColor="#222222"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BMI Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvBmiLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvBmiValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.4"
                    android:textSize="32sp"
                    android:textColor="#5E35B1"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Health Conditions Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvConditionsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Conditions"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No known conditions"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Meal Plan Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFF5F5"
            app:strokeColor="#D32F2F"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/tvMealPlanLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meal Plan"
                        android:textSize="14sp"
                        android:textColor="#D32F2F"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMealPlanImportant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMPORTANT"
                        android:textSize="12sp"
                        android:textColor="#D32F2F"
                        android:textStyle="bold|italic"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMealPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meal plan loading..."
                    android:textSize="16sp"
                    android:textColor="#B71C1C"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvMealPlanInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your customized meal plan to support your health goals."
                    android:textSize="12sp"
                    android:textColor="#D32F2F"
                    android:textStyle="italic"
                    android:layout_marginTop="8dp" />

                <!-- Download Meal Plan Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDownloadMealPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download Meal Plan"
                    android:textColor="#D32F2F"
                    android:layout_marginTop="16dp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="#FFCDD2" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Exercise Plan Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:strokeColor="#5E35B1"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="#EDE7F6"
            android:layout_marginBottom="16dp">

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</ScrollView>
